<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Activity.ListRoomActivity">

    <EditText
        android:id="@+id/txtcari"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="18dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_search"
        android:ems="10"
        android:hint="Cari Kamar"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_cari"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="72dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtcari"
        android:layout_marginEnd="90dp"
        android:text="Cari" />

    <Button
        android:id="@+id/btn_kembali"
        style="@android:style/Widget.Button.Small"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtcari"
        android:layout_marginEnd="10dp"
        android:background="#552FFF"
        android:drawableRight="@drawable/ic_action_back"
        android:text="" />

    <Button
        android:id="@+id/btn_cek1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="72dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="270dp"
        android:text="Detil" />

    <Button
        android:id="@+id/btn_cek2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="72dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="270dp"
        android:text="Detil" />

    <Button
        android:id="@+id/btn_cek3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="72dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="270dp"
        android:text="Detil" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"/>
</RelativeLayout>