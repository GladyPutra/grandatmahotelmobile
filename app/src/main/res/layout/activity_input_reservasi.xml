<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Activity.InputReservasiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_reservasi01"
                android:layout_width="280dp"
                android:layout_height="36dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="78dp"
                android:background="@drawable/buttonshape"
                android:padding="5dp"
                android:text="Reservasi" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_batal02"
                android:layout_width="280dp"
                android:layout_height="36dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="22dp"
                android:background="@drawable/buttonshape2"
                android:padding="5dp"
                android:text="Batal" />

            <EditText
                android:id="@+id/txtid_kamar01"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="230dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_kamar"
                android:ems="10"
                android:hint="Nomor Kamar"
                android:inputType="text"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/txtid_data_diri02"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="580dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_phone"
                android:ems="10"
                android:hint="ID Data Diri"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/txttgl_menginap04"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="330dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_tanggal"
                android:ems="10"
                android:hint="Tanggal Menginap"
                android:inputType="datetime"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/txttgl_selesai05"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="380dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_tanggal"
                android:ems="10"
                android:hint="Tanggal Selesai"
                android:inputType="datetime"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/txtid_kota03"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="630dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_city"
                android:ems="10"
                android:hint="Kota"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/txtjmlh_kamar06"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="430dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_kamar"
                android:ems="10"
                android:hint="Jumlah Kamar"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/txtjmlh_anak07"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="480dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_jumlah"
                android:ems="10"
                android:hint="Jumlah Anak"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/txtjmlh_dewasa08"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="530dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_jumlah"
                android:ems="10"
                android:hint="Jumlah Dewasa"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/spin_kamar01"
                android:layout_width="270dp"
                android:layout_height="29dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="60dp"
                android:background="#11000000"
                android:entries="@android:color/white"
                android:popupBackground="@android:color/white"
                android:textColor="#fff"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="30dp"
                app:srcCompat="@drawable/ic_action_kamar" />

            <Spinner
                android:id="@+id/spin_kota02"
                android:layout_width="270dp"
                android:layout_height="29dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="280dp"
                android:layout_marginLeft="60dp"
                android:background="#11000000"
                android:entries="@android:color/white"
                android:popupBackground="@android:color/white"
                android:textColor="#fff"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="280dp"
                android:layout_marginLeft="30dp"
                app:srcCompat="@drawable/ic_action_city" />

            <Spinner
                android:id="@+id/spin_tarif09"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="580dp"
                android:layout_marginLeft="60dp"
                android:background="#11000000"
                android:entries="@android:color/white"
                android:popupBackground="@android:color/white"
                android:textColor="#fff"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="580dp"
                android:layout_marginLeft="30dp"
                app:srcCompat="@drawable/ic_action_item" />

            <EditText
                android:id="@+id/txtid_tarif10"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="630dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_item"
                android:ems="10"
                android:hint="Item Tambahan"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:visibility="invisible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:fontFamily="cursive"
            android:text="Grand Atma Hotel"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            app:srcCompat="@drawable/reservasi" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="157dp"
            android:text="Reservasi"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

    </RelativeLayout>

</ScrollView>